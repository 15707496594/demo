<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="demo_account_journal_tree" model="ir.ui.view">
        <field name="name">demo_account_journal_tree</field>
        <field name="model">demo.account.journal</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="demo_account_journal_form" model="ir.ui.view" >
        <field name="name">demo_account_journal_form</field>
        <field name="model">demo.account.journal</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h2><field name="name"/></h2>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                        </group>
                        <group>
                            <field name="type"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>